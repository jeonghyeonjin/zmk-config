#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

// Layer definitions
    #define BASE 0
    #define NUM 1
    #define SYM 2
    #define FNC 3
    #define PAD 4
	#define SETT 5
// -----------------

&mt {
  quick-tap-ms = <80>;
//   global-quick-tap;
  flavor = "balanced";
  tapping-term-ms = <150>;
};

&sk {
		// don't release mods on other mods presses
    ignore-modifiers;
};

/ {
		macros {
				// sometimes my device thinks a modifier is being held down
				// pressing all modifiers fixes it.
				unstick: unstick {
					label = "ZM_unstick";
					compatible = "zmk,behavior-macro";
					#binding-cells = <0>;
					bindings = <&kp LSHIFT &kp RSHIFT &kp LCTRL &kp RCTRL &kp LALT &kp RALT &kp LGUI &kp RGUI>;
				};
		};

    combos {
        compatible = "zmk,combos";
		combo_tab {
			timeout-ms = <25>;
			key-positions = <0 1>;
			bindings = <&kp TAB>;
		};
		combo_tab2 {
			timeout-ms = <25>;
			key-positions = <1 2>;
			bindings = <&kp TAB>;
		};
		combo_undo {
			timeout-ms = <25>;
			key-positions = <21 22>;
			bindings = <&kp LC(Z)>;
		};
		combo_1 {
			timeout-ms = <40>;
			key-positions = <0 10>;
			bindings = <&kp N1>;
		};
		combo_2 {
			timeout-ms = <40>;
			key-positions = <1 11>;
			bindings = <&kp N2>;
		};
		combo_3 {
			timeout-ms = <40>;
			key-positions = <2 12>;
			bindings = <&kp N3>;
		};
		combo_4 {
			timeout-ms = <40>;
			key-positions = <3 13>;
			bindings = <&kp N4>;
		};
		combo_5 {
			timeout-ms = <40>;
			key-positions = <4 14>;
			bindings = <&kp N5>;
		};
		combo_6 {
			timeout-ms = <40>;
			key-positions = <5 15>;
			bindings = <&kp N6>;
		};
		combo_7 {
			timeout-ms = <40>;
			key-positions = <6 16>;
			bindings = <&kp N7>;
		};
		combo_8 {
			timeout-ms = <40>;
			key-positions = <7 17>;
			bindings = <&kp N8>;
		};
		combo_9 {
			timeout-ms = <40>;
			key-positions = <8 18>;
			bindings = <&kp N9>;
		};
		combo_0 {
			timeout-ms = <40>;
			key-positions = <9 19>;
			bindings = <&kp N0>;
		};
		combo_minus {
			timeout-ms = <25>;
			key-positions = <15 16>;
			bindings = <&kp MINUS>;
		};
		combo_minus2 {
			timeout-ms = <40>;
			key-positions = <16 28>;
			bindings = <&kp MINUS>;
		};
		combo_under {
			timeout-ms = <40>;
			key-positions = <15 27>;
			bindings = <&kp UNDER>;
		};
		combo_bslh2 {
			timeout-ms = <40>;
			key-positions = <17 29>;
			bindings = <&kp BSLH>;
		};
		combo_sqt2 {
			timeout-ms = <40>;
			key-positions = <18 30>;
			bindings = <&kp SQT>;
		};
		combo_equal {
			timeout-ms = <25>;
			key-positions = <27 28>;
			bindings = <&kp EQUAL>;
		};
		combo_equal2 {
			timeout-ms = <40>;
			key-positions = <13 23>;
			bindings = <&kp EQUAL>;
		};
		combo_plus {
			timeout-ms = <40>;
			key-positions = <14 24>;
			bindings = <&kp PLUS>;
		};
		combo_lpar {
			timeout-ms = <25>;
			key-positions = <2 3>;
			bindings = <&kp LPAR>;
		};
		combo_lbrc {
			timeout-ms = <25>;
			key-positions = <12 13>;
			bindings = <&kp LBRC>;
		};
		combo_lbkt {
			timeout-ms = <25>;
			key-positions = <22 23>;
			bindings = <&kp LBKT>;
		};
		combo_rpar {
			timeout-ms = <25>;
			key-positions = <6 7>;
			bindings = <&kp RPAR>;
		};
		combo_rbrc {
			timeout-ms = <25>;
			key-positions = <16 17>;
			bindings = <&kp RBRC>;
		};
		combo_rbkt {
			timeout-ms = <25>;
			key-positions = <28 29>;
			bindings = <&kp RBKT>;
		};
		combo_sqt {
			timeout-ms = <25>;
			key-positions = <17 18>;
			bindings = <&kp SQT>;
		};
		combo_bslh {
			timeout-ms = <25>;
			key-positions = <29 30>;
			bindings = <&kp BSLH>;
		};
    };

    keymap {
				compatible = "zmk,keymap";

        // Base alpha layer
				default_layer {
						label = "Base";
						bindings = <
						&kp Q 		 &kp W	&kp E		&kp R 			&kp T           	 			&kp Y 			&kp U  	  	&kp I       &kp O    &kp P 
						&mt LSHIFT A &kp S	&kp D		&kp F 			&kp G           	 			&kp H 			&kp J  	  	&kp K       &kp L    &mt LSHIFT SEMI
						&mt LCTRL Z  &kp X	&kp C		&kp V 			&kp B			&kp ESC	&kp B	&kp N 			&kp M  	  	&kp COMMA   &kp DOT  &mt LCTRL FSLH
									 		&kp LALT	&lt PAD SPACE	&lt SYM SPACE 	      			&lt NUM RET  	&lt FNC RET &kp BSPC
						>;
						sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
				};

        // Numbers and high frequency symbols
				num_layer {
						label = "Num";
						bindings = <
						&kp N1		&kp N2		&kp N3			&kp N4		&kp N5							&kp N6	&kp	N7		&kp N8		&kp N9		&kp N0
						&sk LALT	&sk LGUI	&sk LSHIFT		&sk LCTRL	&kp RALT						&trans	&kp LEFT	&kp UP  	&kp RIGHT	&trans
						&trans		&trans		&trans			&trans		&trans		&kp GRAVE	&trans	&trans	&trans		&kp DOWN	&trans		&kp BSLH
												&trans			&trans		&mo SETT       	    			&trans 	&trans		&kp DEL
						>;
						sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
				};

        // Main modifiers and arrow keys
		    sym_layer {
						label = "Sym";
						bindings = <
						&kp EXCL  	&kp AT 		&kp HASH  		&kp DLLR  	&kp PRCNT    						&kp CARET	&kp AMPS	&kp ASTRK	&kp LPAR	&kp RPAR
						&sk LALT	&sk LGUI	&sk LSHIFT		&sk LCTRL	&kp RALT 							&kp MINUS 	&kp EQUAL	&kp BSLH	&kp LBRC   	&kp RBRC
						&trans  	&trans 		&trans 			&trans   	&trans 		&kp GRAVE  &trans		&kp UNDER	&kp PLUS	&kp PIPE	&kp LBKT 	&kp RBKT
												&trans 		&trans 		&trans      							&mo SETT 	&trans 		&kp DEL
						>;
						sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
				};

        // Function keys with modifiers
				fnc_layer {
						label = "Func";
						bindings = <
						&kp F1		&kp F2		&kp F3			&kp F4		&kp F5                  	&kp F6	&kp F7		&kp F8		&kp F9		&kp F10 
						&sk LALT	&sk LGUI	&sk LSHIFT		&sk LCTRL	&kp RALT     				&trans	&kp LEFT	&kp UP		&kp RIGHT	&trans
						&kp F11		&kp F12		&kp PRINTSCREEN	&none		&none		&none	&none	&trans	&trans		&kp DOWN	&trans		&kp PIPE
												&trans			&trans		&trans              		&trans	&trans		&trans
						>;
						sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
				};

        // Low frequency symbols.
				pad_layer {
						label = "Pad";
						bindings = <
						&kp FSLH 	&kp N7	&kp N8	&kp N9	&kp MINUS         			&none 	&kp F7 	&kp F8	&kp F9	&kp F10 
						&kp ASTRK	&kp N4	&kp N5	&kp N6	&kp PLUS         			&none	&kp F4	&kp F5	&kp F6	&kp F11
						&kp N0		&kp N1	&kp N2	&kp N3	&kp EQUAL	&none	&none	&none	&kp F1	&kp F2	&kp F3	&kp F12
											&kp DOT	&trans	&trans        	 			&trans	&trans	&trans
						>;
						sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
				};

        // Used to change the keyboard's settings.
				settings_layer {
						label = "Sett";
						bindings = <
						&bootloader &none	&none	&bt BT_CLR	&bt BT_SEL 0         			&bt BT_SEL 3	&none	&unstick	&none	&bootloader 
						&none 		&none	&none	&none		&bt BT_SEL 1 					&bt BT_SEL 4	&none	&none		&none	&none
						&none 		&none	&none	&none		&bt BT_SEL 2	 &none	&none	&bt BT_SEL 5	&none	&none		&none	&none
											&trans	&trans		&none                          	&none			&trans	&trans
						>;
						sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
				};
		};
};
